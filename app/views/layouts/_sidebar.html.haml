/ Begin Sidebar
#sidebar
	#logo
		= link_to root_path do
			%img{alt: "Caprice", src: "/style/images/logo.png"}/
	/ Begin Menu
	#menu.menu-v
		%ul
			%li
				= link_to 'Home', homes_index_path, class:'active', remote: true
				%ul
					%li
						= link_to 'Home w/ Carousel', homes_index_path, remote: true
					%li
						= link_to 'Home w/ Portfolio', homes_index2_path, remote: true
					%li
						= link_to 'Home w/ Testimonials', homes_index3_path, remote: true
			%li
				= link_to 'Portfolio', portfolios_index_path, remote: true
				%ul
					%li
						= link_to 'Portfolio 4 Columns', portfolios_index_path, remote: true
					%li
						= link_to 'Portfolio 3 Columns', portfolios_portfolio2_path, remote: true
					%li
						= link_to 'Portfolio 2 Columns', portfolios_portfolio3_path, remote: true
					%li
						= link_to 'Portfolio 1 Columns', portfolios_portfolio4_path, remote: true
					%li
						= link_to 'Portfolio Post', portfolios_post_path, remote: true
			%li
				= link_to 'Blog', blogs_blog_path, remote: true
				%ul
					%li
						= link_to 'Blog', blogs_blog_path, remote: true
					%li
						= link_to 'Blog w/ Sidebar', blogs_blog2_path, remote: true
					%li
						= link_to 'Post', blogs_post_path
					%li
						= link_to 'Post w/ Sidebar', blogs_post2_path
			%li
				= link_to 'Features', features_button_path, remote: true
				%ul
					%li
						= link_to 'Buttons Boxes Images', features_button_path, remote: true
					%li
						= link_to 'Tabs Toggle Tables', features_tab_path, remote: true
					%li
						= link_to 'Testimonials', features_testmonial_path , remote: true
					%li
						= link_to 'Typography', features_typography_path, remote: true
					%li
						= link_to 'Service icons', features_icon_path, remote: true
			%li
				=link_to 'Contact Us', contacts_index_path
	/ End Menu
	.sidebox
		%ul.share
			%li
				%a{href: "#"}
					%img{alt: "RSS", src: "/style/images/icon-rss.png"}/
			%li
				%a{href: "#"}
					%img{alt: "Facebook", src: "/style/images/icon-facebook.png"}/
			%li
				%a{href: "#"}
					%img{alt: "Twitter", src: "/style/images/icon-twitter.png"}/
			%li
				%a{href: "#"}
					%img{alt: "Dribbble", src: "/style/images/icon-dribbble.png"}/
			%li
				%a{href: "#"}
					%img{alt: "LinkedIn", src: "/style/images/icon-linkedin.png"}/
	#searchbox-wrapper-for-blog
		= yield :searchbox
/ End Sidebar
