!!!
%html
	%head
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
		%title= content_for?(:title) ? yield(:title) : 'First App'
		%meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'First App'}"}
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags
		%link{href: "http://fonts.googleapis.com/css?family=Amaranth", rel: "stylesheet", type: "text/css"}/
		%link{href: "http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic,700,700italic", rel: "stylesheet", type: "text/css"}/
		/[if IE 7]
			<link rel="stylesheet" type="text/css" href="/style/css/ie7.css" media="all" />
		/[if IE 8]
			<link rel="stylesheet" type="text/css" href="/style/css/ie8.css" media="all" />
		/[if IE 9]
			<link rel="stylesheet" type="text/css" href="/style/css/ie9.css" media="all" />
		%script{src: "/style/js/jquery-1.6.4.min.js", type: "text/javascript"}
		%script{src: "/style/js/ddsmoothmenu.js", type: "text/javascript"}
		%script{src: "/style/js/jquery.jcarousel.js", type: "text/javascript"}
		%script{src: "/style/js/jquery.prettyPhoto.js", type: "text/javascript"}
		%script{src: "/style/js/carousel.js", type: "text/javascript"}
		%script{src: "/style/js/jquery.flexslider-min.js", type: "text/javascript"}
		%script{src: "/style/js/jquery.masonry.min.js", type: "text/javascript"}
		%script{src: "/style/js/jquery.slickforms.js", type: "text/javascript"}
	%body
		/ Begin Wrapper
		#wrapper
			= render 'layouts/sidebar'
			/ Begin Content
			#content
				= yield
				= render 'layouts/footer'
			/ End Content
		/ End Wrapper
		.clear
		%script{src: "/style/js/scripts.js", type: "text/javascript"}
		/ [if !IE]>
		%script{src: "/style/js/jquery.corner.js", type: "text/javascript"}
		/ <![endif]
